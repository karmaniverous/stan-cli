{
  "ci": {
    "exclude": [".github/**", ".lefthook/**"],
    "include": [".github/FUNDING.yml"]
  },
  "cli-main": {
    "exclude": ["src/cli/**"],
    "include": ["src/cli/index.ts"]
  },
  "config": {
    "include": [
      ".editorconfig",
      ".prettierrc.json",
      "eslint.config.ts",
      "package.json",
      "tsconfig.json",
      "vitest.config.ts",
      "knip.json",
      "lefthook.yml",
      "tsdoc.json",
      "rollup.config.ts",
      "typedoc.json"
    ]
  },
  "docs": {
    "exclude": ["docs-src/**", "contributing.md", "README.md", "LICENSE"],
    "include": ["README.md"]
  },
  "init": {
    "exclude": ["src/cli/init/**", "src/runner/init/**"],
    "include": ["src/cli/init.ts", "src/runner/init/index.ts"]
  },
  "overlay": {
    "exclude": ["src/runner/overlay/**"],
    "include": ["src/runner/overlay/facets.ts"]
  },
  "patch": {
    "exclude": ["src/cli/patch/**", "src/runner/patch/**"],
    "include": ["src/cli/patch/index.ts", "src/runner/patch/index.ts"]
  },
  "prompt": {
    "exclude": ["src/runner/prompt/**"],
    "include": ["src/runner/prompt/index.ts"]
  },
  "run": {
    "exclude": ["src/cli/run/**", "src/cli/runner.*.ts", "src/runner/run/**"],
    "include": ["src/cli/runner.ts", "src/runner/run/index.ts"]
  },
  "run-exec": {
    "exclude": ["src/runner/run/exec/**"],
    "include": ["src/runner/run/exec/index.ts"]
  },
  "run-session": {
    "exclude": ["src/runner/run/session/**"],
    "include": ["src/runner/run/session/index.ts"]
  },
  "run-ui": {
    "exclude": [
      "src/anchored-writer/**",
      "src/runner/run/live/**",
      "src/runner/run/progress/**",
      "src/runner/run/presentation/**",
      "src/runner/run/ui/**"
    ],
    "include": ["src/runner/run/ui/index.ts"]
  },
  "runner-main": {
    "exclude": ["src/runner/**"],
    "include": ["src/runner/index.ts"]
  },
  "snap": {
    "exclude": ["src/cli/snap/**", "src/runner/snap/**"],
    "include": ["src/cli/snap/index.ts", "src/runner/snap/index.ts"]
  },
  "tests": {
    "exclude": ["src/test/**", "src/test-support/**", "**/*.test.ts"],
    "include": ["src/test/index.ts"]
  }
}
